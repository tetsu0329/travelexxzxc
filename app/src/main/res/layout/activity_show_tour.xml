<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_tour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.travelex.asus.realtimeproject.ShowTour">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@android:style/Widget.Holo.ScrollView"
        android:scrollbarStyle="outsideOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <TextView
                    android:text="Location: "
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:fontFamily="serif" />
                <TextView
                    android:text="Location: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    android:fontFamily="serif" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/noprofile"
                android:id="@+id/imageView6"
                android:layout_height="116dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:srcCompat="@drawable/noprofile"
                android:id="@+id/imageView7"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:srcCompat="@drawable/noprofile"
                android:id="@+id/imageView8"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:text="Description and Price: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Description and Price here: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="20dp"
                android:text="Itinerary: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView41"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Itinerary here: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView42"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="20dp"
                android:text="Inclusions in the Tour: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView43"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Inclusions here: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView44"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="20dp"
                android:text="Date: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView36"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Date here "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Number of days left here "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textStyle="normal|bold" />
            <TextView
                android:layout_marginTop="20dp"
                android:text="Slots Left: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView39"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="serif" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="slots here "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView40"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:fontFamily="serif" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Join Travel"
                android:id="@+id/joinbtn" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back to Main Menu"
                android:id="@+id/mmbtn" />
            </LinearLayout>
    </ScrollView>
</LinearLayout>
